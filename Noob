--// Meow Script (phi√™n b·∫£n m√†u t√≠m, ƒë·∫øm % ng·∫´u nhi√™n, ho√†n th√†nh ~15s)

local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local UIS = game:GetService("UserInputService")

if _G.__PHATLEE_HUB then _G.__PHATLEE_HUB:Destroy() end

local function toast(parent, title, msg, dur)
	dur = dur or 3
	local t = Instance.new("TextLabel")
	t.BackgroundColor3 = Color3.fromRGB(120, 100, 240)
	t.TextColor3 = Color3.fromRGB(255, 255, 255)
	t.Font = Enum.Font.GothamSemibold
	t.TextSize = 16
	t.Text = title.." - "..msg
	t.AnchorPoint = Vector2.new(0.5,1)
	t.Position = UDim2.new(0.5,0,0,-10)
	t.Parent = parent
	Instance.new("UICorner", t).CornerRadius = UDim.new(0,8)
	task.delay(dur, function()
		if t then t:Destroy() end
	end)
end

local function dragify(handle, target)
	local dragging, startPos, startInputPos
	handle.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
			dragging = true
			startPos = target.Position
			startInputPos = input.Position
			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then dragging = false end
			end)
		end
	end)
	UIS.InputChanged:Connect(function(input)
		if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
			local delta = input.Position - startInputPos
			target.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
		end
	end)
end

